<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style1.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Paytone+One&display=swap"
        rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Paytone+One&family=Radio+Canada+Big:ital,wght@0,400..700;1,400..700&display=swap"
        rel="stylesheet">

<body bgcolor="black">
    <div class="main">
        <div class="text">
            Write Your Notes
        </div>
        <form action="/create" class="input" method="post">
            <input type="text" class="title" placeholder="Title Goes Here ..." name="heading">
            <textarea class="content" placeholder="Content Goes Here... " name="details"></textarea>
            <input type="submit" class="submit" value="Create Task">
        </form>
    </div>
    <div class="tasks">
        <% if (files.length>0){ %>
            <% files.forEach((val)=>{ %>
                <div class="task">
                    <h1><%=val%></h1>
                    <a href='/files/<%=val%>'>Read More...</a>
                    <a href='/rename/<%=val%>'>Rename File...</a>
                </div>
                <% }) %>
                    <% } else { %>
                        <div class="task">
                            <h1>No notes Yet...</h1>
                        </div>
                        <% } %>

    </div>
    <script>

        let blink = setInterval(() => {
            let end = document.body.getElementsByClassName("text");
            end = end[end.length - 1];
            if (end.innerHTML.endsWith("...")) {
                end.innerHTML = end.innerHTML.slice(0, end.innerHTML.length - 3)
            }
            else {
                end.innerHTML = end.innerHTML + "."
            }
        }, 200);
    </script>
</body>

</html>